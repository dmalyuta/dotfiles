{
    "workbench.editor.enablePreview": false,
    "editor.cursorStyle": "block",
    "editor.cursorBlinking": "solid",
    "workbench.colorTheme": "Night Owl (No Italics)",
    "workbench.editor.untitled.hint": "hidden",
    "editor.occurrencesHighlight": false,
    "editor.renderWhitespace": "none",
    "editor.wordWrap": "wordWrapColumn",
    "files.eol": "\n",
    "editor.rulers": [
        100
    ],
    "workbench.colorCustomizations": {
        "editorCursor.foreground": "#8c9600",
        "terminalCursor.foreground": "#eeff00",
        "editorRuler.foreground": "#797979"
    },
    "git.confirmSync": false,
    "outline.showVariables": false,
    "workbench.editor.wrapTabs": true,
    "breadcrumbs.showVariables": false,
    "redhat.telemetry.enabled": false,
    "security.workspace.trust.startupPrompt": "never",
    "workbench.startupEditor": "none",
    "window.titleBarStyle": "custom",
    "telemetry.telemetryLevel": "off",
    "bracket-pair-colorizer-2.showHorizontalScopeLine": false,
    "bracket-pair-colorizer-2.showVerticalScopeLine": false,
    "files.trimTrailingWhitespace": true,
    "metaGo.decoration.characters": "a,s,d,f,g,h,j,k,l",
    "metaGo.decoration.additionalSingleCharCodeCharacters": "F,J",
    "jupyter.interactiveWindowMode": "perFile",
    "jupyter.askForKernelRestart": false,
    "http.proxyStrictSSL": false,
    "center-editor-window.threeStateToggle": true,
    "center-editor-window.offset": 5,
    "workbench.iconTheme": "vscode-icons",
    "editor.wordWrapColumn": 100,
    "security.workspace.trust.untrustedFiles": "open",

    /// ToDo highlighting
    "todohighlight.isEnable": true,
    "todohighlight.keywords": [
        {
            "text": "TODO",
            "color": "#16c60cff",
            "fontWeight": "bold"
        },
        {
            "text": "WARN",
            "color": "yellow",
            "fontWeight": "bold"
        }
    ],
    "todohighlight.defaultStyle": {
        "backgroundColor": "rgba(0,0,0,0)"
    },

    /// Zen mode (minimalist layout)
    "zenMode.fullScreen": false,
    "zenMode.centerLayout": false,
    "zenMode.hideTabs": false,
    // multiCommand
    "multiCommand.commands": [
        {
            "command": "multiCommand.betterZenMode",
            "sequence": [
            "workbench.action.toggleZenMode",
            "editor.action.toggleMinimap",
            "settings.cycle.zenModeExtras",
            ]
        },
    ],

    // Settings cycle
    "settings.cycle": [
    {
        "id": "zenModeExtras",
        "overrideWorkspaceSettings": true,
        "values": [
                {
                    "editor.lineNumbers": "off",
                    "editor.folding": false,
                    "editor.guides.indentation": false,
                },
                {
                    "editor.lineNumbers": "on",
                    "editor.folding": true,
                    "editor.guides.indentation": true,
                }
            ]
        }
    ],
    "editor.lineNumbers": "on",
    "editor.folding": true,
    "editor.guides.indentation": true,
    "latex-workshop.view.pdf.viewer": "tab",
}
