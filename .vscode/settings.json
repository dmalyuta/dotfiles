{
    /// Appearance
    "window.zoomLevel": -1,
    "window.titleBarStyle": "custom",
    "workbench.colorTheme": "One Dark Pro Darker",
    "editor.renderLineHighlight": "gutter",
    "workbench.colorCustomizations": {
        "editorCursor.foreground": "#8c9600",
        "editor.selectionBackground": "#ecbe7b44",
        "minimap.foregroundOpacity":"#000000ff",
        "terminalCursor.foreground": "#eeff00",
        "editorRuler.foreground": "#797979",
        "diffEditor.insertedTextBorder": "#00000000",
        "diffEditor.removedTextBorder": "#00000000",
        "diffEditor.insertedTextBackground": "#2a413855",
        "diffEditor.removedTextBackground": "#572d3655",
        "titleBar.activeForeground":"#e2c08dff",
        "editor.lineHighlightBackground": "#373c44ff",
        "editorLineNumber.activeForeground": "#ffffff88",
    },
    "workbench.iconTheme": "vscode-icons",
    "workbench.startupEditor": "none",
    "workbench.editor.wrapTabs": true,
    "editor.cursorStyle": "block",
    "editor.cursorBlinking": "solid",
    "editor.occurrencesHighlight": false,
    "editor.renderWhitespace": "none",
    "editor.lineNumbers": "on",
    "editor.folding": true,
    "editor.guides.indentation": true,
    "outline.showVariables": false,
    "breadcrumbs.showVariables": false,
    "window.customMenuBarAltFocus": false,
    "window.menuBarVisibility": "hidden",
    "customizeUI.activityBar": "bottom",
    "workbench.editor.showTabs": false,
    "editor.minimap.enabled": false,
    "vsicons.dontShowNewVersionMessage": true,

    /// General editing
    "security.workspace.trust.enabled": false,
    "security.workspace.trust.startupPrompt": "never",
    "security.workspace.trust.untrustedFiles": "open",
    "workbench.editor.enablePreview": false,
    "workbench.editor.untitled.hint": "hidden",
    "files.insertFinalNewline": true,
    "editor.wordWrap": "off",
    "files.eol": "\n",
    "editor.rulers": [ 100 ],
    "editor.wordWrapColumn": 100,
    "editor.stickyTabStops": true,
    "center-editor-window.threeStateToggle": true,
    "center-editor-window.offset": 5,
    "bracket-pair-colorizer-2.showHorizontalScopeLine": false,
    "bracket-pair-colorizer-2.showVerticalScopeLine": false,
    "files.trimTrailingWhitespace": true,
    "metaGo.decoration.characters": "a,s,d,f,g,h,j,k,l",
    "metaGo.decoration.additionalSingleCharCodeCharacters": "F,J",
    "metaGo.jumper.enableRippleSupportForSequentialTargetCharsCommand": false,
    "explorer.confirmDelete": false,
    "bookmarks.saveBookmarksInProject": true,
    "editor.quickSuggestions": { "other": false, "comments": false, "strings": false },
    "editor.quickSuggestionsDelay": 1000,
    "editor.suggestOnTriggerCharacters": false,
    "editor.acceptSuggestionOnCommitCharacter": false,
    "editor.wordBasedSuggestions": false,
    "editor.parameterHints.enabled": false,
    "editor.suggest.snippetsPreventQuickSuggestions": false,
    "editor.inlineSuggest.enabled": false,
    "editor.snippetSuggestions": "inline",

    /// Online
    "telemetry.telemetryLevel": "off",
    "http.proxyStrictSSL": false,
    "redhat.telemetry.enabled": false,

    /// Terminal
    "terminal.integrated.defaultProfile.linux": "bash",
    "terminal.integrated.cwd": "${fileDirname}",

    /// Git
    "git.confirmSync": false,
    "diffEditor.ignoreTrimWhitespace": false,
    "gitlens.views.branches.branches.layout": "list",

    /// ToDo highlighting
    "todohighlight.isEnable": true,
    "todohighlight.keywords": [
        {
            "text": "TODO",
            "color": "#16c60cff",
            "fontWeight": "bold"
        },
        {
            "text": "WARN",
            "color": "yellow",
            "fontWeight": "bold"
        }
    ],
    "todohighlight.defaultStyle": {
        "backgroundColor": "rgba(0,0,0,0)"
    },

    /// Zen mode (minimalist layout)
    "zenMode.fullScreen": false,
    "zenMode.centerLayout": false,
    "zenMode.hideTabs": false,

    /// Multi-commands
    "multiCommand.commands": {
        // "multiCommand.NAME": {
        //     "interval": INTERVAL_BETWEEN_COMMANDS_MS,
        //     "sequence": [
        //         "COMMAND_1",
        //         "COMMAND_2",
        //     ]
        // },
    },

    /// Language: plain text
    "[plaintext]": {
        // Plain text-specific customizations of the general config
        "editor.rulers": [ 80 ],
        "editor.wordWrapColumn": 80,
    },

    /// Language: Markdown
    "[markdown]": {
        // Markdown-specific customizations of the general config
        "editor.rulers": [ 80 ],
        "editor.wordWrapColumn": 80,
    },

    /// Language: LaTeX
    "latex-workshop.view.pdf.viewer": "tab",
    "latex-workshop.view.pdf.backgroundColor": "#011627ff",
    "latex-workshop.intellisense.includegraphics.preview.pdf.enabled": true,
    "latex-workshop.view.pdf.hand": true,
    "latex-workshop.view.pdf.invert": 0,
    "latex-workshop.view.pdf.invertMode.enabled": "never",
    "latex-workshop.view.pdf.zoom": "page-width",
    "latex-workshop.latex.autoBuild.run": "never",
    "[latex]": {
        // LaTeX-specific customizations of the general config
        "editor.rulers": [ 80 ],
        "editor.wordWrapColumn": 80,
    },

    /// Language: Python
    "jupyter.interactiveWindowMode": "perFile",
    "jupyter.askForKernelRestart": false,
    "pylance.insidersChannel": "daily",
    // "python.analysis.logLevel": "Trace",
    "python.analysis.indexing": true,

    /// Language: Julia
    "terminal.integrated.commandsToSkipShell": [
        "language-julia.interrupt"
    ],
    "julia.symbolCacheDownload": true,
    "julia.enableTelemetry": false,
    "[julia]": {
        // Julia-specific customizations of the general config
        "editor.unicodeHighlight.allowedCharacters": {
            "ρ": true,
            "σ": true,
            "γ": true
        },
    },
}
