{
    /// Appearance
    "window.titleBarStyle": "custom",
    "workbench.colorTheme": "Night Owl (No Italics)",
    "workbench.colorCustomizations": {
        "editorCursor.foreground": "#8c9600",
        "terminalCursor.foreground": "#eeff00",
        "editorRuler.foreground": "#797979",
        "diffEditor.insertedTextBorder": "#00000000",
        "diffEditor.removedTextBorder": "#00000000",
        "diffEditor.insertedTextBackground": "#2a413855",
        "diffEditor.removedTextBackground": "#572d3655",
    },
    "workbench.iconTheme": "vscode-icons",
    "workbench.startupEditor": "none",
    "workbench.editor.wrapTabs": true,
    "editor.cursorStyle": "block",
    "editor.cursorBlinking": "solid",
    "editor.occurrencesHighlight": false,
    "editor.renderWhitespace": "none",
    "outline.showVariables": false,
    "breadcrumbs.showVariables": false,

    /// General editing
    "security.workspace.trust.startupPrompt": "never",
    "security.workspace.trust.untrustedFiles": "open",
    "workbench.editor.enablePreview": false,
    "workbench.editor.untitled.hint": "hidden",
    "editor.wordWrap": "wordWrapColumn",
    "files.eol": "\n",
    "editor.rulers": [ 100 ],
    "editor.wordWrapColumn": 100,
    "center-editor-window.threeStateToggle": true,
    "center-editor-window.offset": 5,
    "bracket-pair-colorizer-2.showHorizontalScopeLine": false,
    "bracket-pair-colorizer-2.showVerticalScopeLine": false,
    "files.trimTrailingWhitespace": true,
    "metaGo.decoration.characters": "a,s,d,f,g,h,j,k,l",
    "metaGo.decoration.additionalSingleCharCodeCharacters": "F,J",

    /// Online
    "telemetry.telemetryLevel": "off",
    "http.proxyStrictSSL": false,
    "redhat.telemetry.enabled": false,

    /// Git
    "git.confirmSync": false,

    /// ToDo highlighting
    "todohighlight.isEnable": true,
    "todohighlight.keywords": [
        {
            "text": "TODO",
            "color": "#16c60cff",
            "fontWeight": "bold"
        },
        {
            "text": "WARN",
            "color": "yellow",
            "fontWeight": "bold"
        }
    ],
    "todohighlight.defaultStyle": {
        "backgroundColor": "rgba(0,0,0,0)"
    },

    /// Zen mode (minimalist layout)
    "zenMode.fullScreen": false,
    "zenMode.centerLayout": false,
    "zenMode.hideTabs": false,
    // multiCommand
    "multiCommand.commands": [
        {
            "command": "multiCommand.betterZenMode",
            "sequence": [
            "workbench.action.toggleZenMode",
            "editor.action.toggleMinimap",
            "settings.cycle.zenModeExtras",
            ]
        },
    ],

    /// Settings cycle
    "settings.cycle": [
    {
        "id": "zenModeExtras",
        "overrideWorkspaceSettings": true,
        "values": [
                {
                    "editor.lineNumbers": "off",
                    "editor.folding": false,
                    "editor.guides.indentation": false,
                },
                {
                    "editor.lineNumbers": "on",
                    "editor.folding": true,
                    "editor.guides.indentation": true,
                }
            ]
        }
    ],

    /// Language: LaTeX
    "latex-workshop.view.pdf.viewer": "tab",

    /// Language: Python
    "jupyter.interactiveWindowMode": "perFile",
    "jupyter.askForKernelRestart": false,
    "window.zoomLevel": -1,
}
