{
    /// Default controlled settings
    "workbench.activityBar.visible": false,
    "editor.minimap.enabled": false,
    "window.zoomLevel": -1,

    /// Appearance
    "window.titleBarStyle": "custom",
    "customizeUI.activityBar": "bottom",
    "customizeUI.activityBarHideSettings": true,
    "customizeUI.moveStatusbar": true,
    "workbench.experimental.layoutControl.enabled": true,
    "workbench.colorTheme": "One Dark Pro Darker",
    "editor.renderLineHighlight": "gutter",
    "workbench.colorCustomizations": {
        "editorCursor.foreground": "#8c9600",
        "editor.selectionBackground": "#ecbe7b44",
        "minimap.foregroundOpacity":"#000000ff",
        "terminalCursor.foreground": "#eeff00",
        "editorRuler.foreground": "#797979",
        "diffEditor.insertedTextBorder": "#00000000",
        "diffEditor.removedTextBorder": "#00000000",
        "diffEditor.insertedTextBackground": "#2a413855",
        "diffEditor.removedTextBackground": "#572d3655",
        "titleBar.activeForeground":"#e2c08dff",
        "editor.lineHighlightBackground": "#373c44ff",
        "editorLineNumber.activeForeground": "#ffffff88",
    },
    "workbench.iconTheme": "vscode-icons",
    "workbench.startupEditor": "none",
    "workbench.editor.wrapTabs": true,
    "editor.cursorStyle": "block",
    "editor.cursorBlinking": "solid",
    "editor.occurrencesHighlight": false,
    "editor.renderWhitespace": "none",
    "editor.lineNumbers": "on",
    "editor.folding": true,
    "editor.guides.indentation": true,
    "outline.showVariables": false,
    "breadcrumbs.showVariables": false,
    "window.customMenuBarAltFocus": false,
    "window.menuBarVisibility": "hidden",
    "workbench.editor.showTabs": false,
    "vsicons.dontShowNewVersionMessage": true,
    "textmarker.commandsOnContextMenu": {
        "updateHighlight": false,
        "goToNextHighlight": false,
        "goToPreviousHighlight": false,
        "clearAllHighlight": true
    },

    /// General editing
    "security.workspace.trust.enabled": false,
    "security.workspace.trust.startupPrompt": "never",
    "security.workspace.trust.untrustedFiles": "open",
    "files.autoSave": "off",
    "workbench.editor.enablePreview": false,
    "workbench.editor.untitled.hint": "hidden",
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "editor.wordWrap": "off",
    "files.eol": "\n",
    "editor.rulers": [ 100 ],
    "editor.wordWrapColumn": 100,
    "editor.stickyTabStops": true,
    "center-editor-window.threeStateToggle": true,
    "center-editor-window.offset": 5,
    "editor.bracketPairColorization.enabled": true,
    "editor.guides.bracketPairs": false,
    "editor.guides.bracketPairsHorizontal": false,
    "files.trimTrailingWhitespace": true,
    "explorer.confirmDelete": false,
    "bookmarks.saveBookmarksInProject": true,
    "editor.quickSuggestions": { "other": false, "comments": false, "strings": false },
    "editor.quickSuggestionsDelay": 3600000,
    "editor.suggestOnTriggerCharacters": false,
    "editor.acceptSuggestionOnCommitCharacter": false,
    "editor.wordBasedSuggestions": false,
    "editor.parameterHints.enabled": false,
    "editor.suggest.snippetsPreventQuickSuggestions": false,
    "editor.inlineSuggest.enabled": false,
    "editor.snippetSuggestions": "inline",
    "notebook.lineNumbers": "on",
    "bracket-peek.previewLocation": "Hover",
    "extensions.ignoreRecommendations": true,
    "zenMode.restore": false,
    "explorer.confirmDragAndDrop": false,
    "findJump.jumpChars": "asdfghjkl;ASDFGHJKL:",

    /// Startup
    "remote.restoreForwardedPorts": false,
    "terminal.integrated.persistentSessionReviveProcess": "never",

    /// Online
    "telemetry.telemetryLevel": "off",
    "http.proxyStrictSSL": false,
    "redhat.telemetry.enabled": false,

    /// Terminal
    "terminal.integrated.defaultProfile.linux": "bash",
    // see options for cwd at: https://code.visualstudio.com/docs/editor/variables-reference
    "terminal.integrated.cwd": "${workspaceFolder}",
    "terminal.external.linuxExec": "x-terminal-emulator",

    /// Git
    "git.confirmSync": false,
    "diffEditor.ignoreTrimWhitespace": false,
    "gitlens.views.branches.branches.layout": "list",

    /// ToDo highlighting
    "todohighlight.isEnable": true,
    "todohighlight.keywords": [
        {
            "text": "TODO",
            "color": "#16c60cff",
            "fontWeight": "bold",
            "before": {
			    "contentText": "✔",
                "margin": "0 1ex 0 0",
            },
        },
        {
            "text": "WARN",
            "color": "yellow",
            "fontWeight": "bold",
            "before": {
			    "contentText": "📢",
                "margin": "0 1ex 0 0",
            },
        },
        {
            "text": "NOTE",
            "color": "orange",
            "fontWeight": "bold",
            "regex": {
                "pattern": "(?<=^|\"|\\s)(NOTE|NB)(?!\\w)"
            },
            "before": {
			    "contentText": "📚",
                "margin": "0 1ex 0 0",
            },
        }
    ],
    "todohighlight.defaultStyle": {
        "backgroundColor": "rgba(0,0,0,0.2)",
    },

    /// Zen mode (minimalist layout)
    "zenMode.fullScreen": false,
    "zenMode.centerLayout": false,
    "zenMode.hideTabs": false,

    /// Multi-commands
    "multiCommand.commands": {
        "multiCommand.closeSideAndAuxiliaryBar": {
            "label": "closeSideAndAuxiliaryBar",
            "description": "Close both the sidebar and auxiliary bar",
            "sequence": [
                "workbench.action.closeSidebar",
                "workbench.action.focusAuxiliaryBar",
                "workbench.action.toggleAuxiliaryBar"
            ]
        },
        "multiCommand.showSideAndAuxiliaryBar": {
            "label": "showSideAndAuxiliaryBar",
            "description": "Show both the sidebar and auxiliary bar",
            "sequence": [
                "workbench.action.closeSidebar",
                "workbench.action.toggleSidebarVisibility",
                "workbench.action.focusAuxiliaryBar",
                "workbench.action.focusLastEditorGroup"
            ]
        }
    },

    /// Language: plain text
    "[plaintext]": {
        // Plain text-specific customizations of the general config
        "editor.rulers": [ 80 ],
        "editor.wordWrapColumn": 80,
    },

    /// Language: Markdown
    "[markdown]": {
        // Markdown-specific customizations of the general config
        "editor.rulers": [ 80 ],
        "editor.wordWrapColumn": 80,
    },

    /// Language: JSON*
    "[jsonnet]": {
        "editor.tabSize": 2,
    },

    /// Language: LaTeX
    "latex-workshop.view.pdf.viewer": "tab",
    "latex-workshop.view.pdf.backgroundColor": "#23272eff",
    "latex-workshop.view.pdf.hand": true,
    "latex-workshop.view.pdf.invert": 0,
    "latex-workshop.view.pdf.invertMode.enabled": "never",
    "latex-workshop.view.pdf.zoom": "page-width",
    "latex-workshop.latex.autoBuild.run": "never",
    "[latex]": {
        // LaTeX-specific customizations of the general config
        "editor.rulers": [ 80 ],
        "editor.wordWrapColumn": 80,
    },

    /// Language: Python
    "jupyter.interactiveWindowMode": "perFile",
    "jupyter.askForKernelRestart": false,
    "pylance.insidersChannel": "off",
    // "python.analysis.logLevel": "Trace",
    "python.analysis.indexing": true,
    "python.analysis.completeFunctionParens": true,

    /// Language: Julia
    "terminal.integrated.commandsToSkipShell": [
        "language-julia.interrupt"
    ],
    "julia.symbolCacheDownload": true,
    "julia.enableTelemetry": false,
    "julia.enableCrashReporter": false,
    "[julia]": {
        // Julia-specific customizations of the general config
        "editor.unicodeHighlight.allowedCharacters": {
            "α": true,
            "ρ": true,
            "σ": true,
            "γ": true,
            "ℓ": true,
        },
    },

    /// Language: C/C++
    "C_Cpp.autocompleteAddParentheses": true,
}
