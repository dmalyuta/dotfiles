{
	"name": "suggestions-multi-trigger",
	"displayName": "SuggestionsMultiTrigger",
	"description": "Trigger suggestions twice with a delay in hope that the list is populated by LSP",
	"publisher": "dmalyuta",
	"version": "0.1.0",
	"engines": {
		"vscode": "^1.62.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onStartupFinished"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "suggestions-multi-trigger.toggleSuggestions",
				"title": "trigger",
				"category": "Multi-suggest: "
			}
		],
		"menus": {
			"commandPalette": [
				{
					"command": "suggestions-multi-trigger.toggleSuggestions",
					"when": "editorHasCompletionItemProvider"
				}
			]
		},
		"keybindings": [
			{
				"key": "up",
				"command": "suggestions-multi-trigger.cancelSecondTrigger",
				"when": "suggestions-multi-trigger.afterFirstTrigger"
			},
			{
				"key": "down",
				"command": "suggestions-multi-trigger.cancelSecondTrigger",
				"when": "suggestions-multi-trigger.afterFirstTrigger"
			},
			{
				"key": "ctrl+i",
				"command": "suggestions-multi-trigger.cancelSecondTrigger",
				"when": "suggestions-multi-trigger.afterFirstTrigger"
			},
			{
				"key": "esc",
				"command": "suggestions-multi-trigger.cancelCompletion",
				"when": "suggestWidgetVisible"
			},
			{
				"key": "left",
				"command": "suggestions-multi-trigger.cancelCompletion",
				"when": "suggestWidgetVisible"
			},
			{
				"key": "right",
				"command": "suggestions-multi-trigger.cancelCompletion",
				"when": "suggestWidgetVisible"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.62.0",
		"@types/glob": "^7.1.4",
		"@types/mocha": "^9.0.0",
		"@types/node": "14.x",
		"@typescript-eslint/eslint-plugin": "^5.1.0",
		"@typescript-eslint/parser": "^5.1.0",
		"eslint": "^8.1.0",
		"glob": "^7.1.7",
		"mocha": "^9.1.3",
		"typescript": "^4.4.4",
		"@vscode/test-electron": "^1.6.2"
	}
}
